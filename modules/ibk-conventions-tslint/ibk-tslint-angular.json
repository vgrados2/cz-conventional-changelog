{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "array-type": [
      true,
      "generic"
    ],
    "arrow-parens": true,
    "deprecation": {
      "severity": "warning"
    },
    "component-class-suffix": [
      true,
      "Component",
      "View",
      "Container"
    ],
    "contextual-lifecycle": true,
    "directive-class-suffix": true,
    "contextual-decorator": true,
    "no-conditional-assignment": true,
    "arrow-return-shorthand": true,
    "class-name": true,
    "import-destructuring-spacing": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "no-lifecycle-call": true,
    "import-blacklist": [
      true,
      "rxjs/Rx",
      "rxjs-compat",
      "rxjs/internal/operators"
    ],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      140
    ],
    "member-access": [
      true,
      "check-accessor",
      "check-parameter-property",
      "check-constructor"
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "private-static-field",
          "public-instance-field",
          "private-instance-field",
          "public-constructor",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ],
        "alphabetize": true
      }
    ],
    "no-consecutive-blank-lines": true,
    "ter-newline-after-var": [
      true
    ],
    "object-curly-spacing": [
      true,
      "always",
      {
        "arraysInObjects": false,
        "objectsInObjects": false
      }
    ],
    "no-console": [
      true,
      "log",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-empty": true,
    "no-empty-interface": true,
    "no-constant-condition": true,
    "no-eval": true,
    "no-extra-semi": true,
    "no-inner-declarations": true,
    "no-extra-boolean-cast": false,
    "ter-no-sparse-arrays": true,
    "ter-no-irregular-whitespace": true,
    "no-duplicate-variable": true,
    "ter-no-self-compare": true,
    "no-ex-assign": true,
    "use-isnan": true,
    "ter-no-script-url": true,
    "no-unexpected-multiline": true,
    "no-unsafe-finally": true,
    "no-duplicate-case": true,
    "no-inferrable-types": false,
    "no-string-literal": true,
    "array-bracket-spacing": true,
    "no-string-throw": true,
    "no-shadowed-variable": [
      true,
      {
        "class": true,
        "enum": true,
        "function": true,
        "interface": true,
        "namespace": true,
        "typeAlias": false,
        "typeParameter": true,
        "underscore": false
      }
    ],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": false,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "no-var-requires": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single"
    ],
    "switch-final-break": [
      true,
      "always"
    ],
    "type-literal-delimiter": true,
    "newline-before-return": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-finally",
      "check-whitespace"
    ],
    "prefer-const": true,
    "trailing-comma": false,
    "triple-equals": [
      true,
      "allow-null-check",
      "allow-undefined-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case",
      "require-const-for-all-caps",
      "ban-keywords"
    ],
    "block-spacing": true,
    "ter-no-mixed-spaces-and-tabs": {
      "type": "tabs",
      "smartTabs": true
    },
    "whitespace": [
      true,
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock",
      "check-postbrace"
    ],
    "no-conflicting-lifecycle": true,
    "no-internal-module": true,
    "no-floating-promises": false,
    "no-any": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "unified-signatures": true,
    "no-trailing-whitespace": false,
    "no-unused-css": true,
    "no-inputs-metadata-property": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "use-component-selector": false,
    "template-no-call-expression": true,
    "template-use-track-by-function": true,
    "prefer-output-readonly": true,
    "template-conditional-complexity": true,
    "no-output-rename": true,
    "no-pipe-impure": true,
    "prefer-on-push-component-change-detection": false,
    "no-outputs-metadata-property": true,
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "use-injectable-provided-in": false,
    "no-input-prefix": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-max-inline-declarations": [
      true,
      {
        "animations": 20,
        "styles": 1,
        "template": 1
      }
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "curly": true,
    "eofline": false,
    "forin": true,
    "import-spacing": true,
    "interface-over-type-literal": true,
    "label-position": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "false",
        "method": "false",
        "constructor": "false",
        "asyncArrow": "always"
      }
    ],
    "space-within-parens": false
  },
  "rulesDirectory": [
    "codelyzer"
  ]
}
